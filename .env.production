# Production Environment Configuration for Railway Deployment
# Generated for CoachMate Platform
# Last Updated: 2025-11-06

# ===== DATABASE CONFIGURATION =====
# Railway will provide this automatically when you add PostgreSQL service
# Format: postgresql://username:password@host:port/database_name
# You can view this in Railway dashboard under Variables
DATABASE_URL="postgresql://user:password@railway.app:5432/railway"

# ===== JWT SECRETS (MUST BE CHANGED) =====
# Generate secure random strings for production
# Command: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_ACCESS_SECRET="CHANGE_THIS_TO_SECURE_RANDOM_STRING_MIN_32_CHARS"
JWT_REFRESH_SECRET="CHANGE_THIS_TO_ANOTHER_SECURE_RANDOM_STRING_MIN_32_CHARS"

# ===== JWT CONFIGURATION =====
JWT_ACCESS_EXPIRES_IN="1h"
JWT_REFRESH_EXPIRES_IN="7d"

# ===== NODE ENVIRONMENT =====
NODE_ENV="production"

# ===== API CONFIGURATION =====
PORT=4000
API_VERSION="v1"

# ===== CORS CONFIGURATION =====
# Update with your frontend URL on Railway or Vercel
# Example: https://coachmate-frontend.vercel.app
CORS_ORIGINS="https://your-frontend-domain.com,https://www.your-frontend-domain.com"

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===== LOGGING =====
# Use 'error' in production to reduce log volume
LOG_LEVEL="info"

# ===== ADDITIONAL PRODUCTION SETTINGS =====
# Enable compression for API responses
COMPRESSION_ENABLED="true"

# Trust proxy (important for Railway)
TRUST_PROXY="true"

# ===== MONITORING =====
# Optional: Add your monitoring service keys
# SENTRY_DSN="https://your-sentry-key@sentry.io/project-id"
# DATADOG_API_KEY="your-datadog-api-key"
