# Database
DATABASE_URL="postgresql://user:password@localhost:5432/coachmate_dev"

# JWT Secrets
# Generate using: openssl rand -base64 32
JWT_ACCESS_SECRET="your-super-secret-access-token-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-token-key-change-this-in-production"

# JWT Expiration
JWT_ACCESS_EXPIRES_IN="1h"
JWT_REFRESH_EXPIRES_IN="7d"

# Server
NODE_ENV="development"
PORT=4000
API_VERSION="v1"

# CORS
# Comma-separated list of allowed origins
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # max 100 requests per window

# Logging
LOG_LEVEL="debug"  # debug, info, warn, error

# File Upload (Future)
MAX_FILE_SIZE_MB=10

# Email Service (Future - Resend)
# RESEND_API_KEY="re_xxxxxxxxxxxx"
# FROM_EMAIL="noreply@coachmate.com"

# SMS Service (Future - MSG91)
# MSG91_AUTH_KEY="your-msg91-auth-key"
# MSG91_SENDER_ID="COACHMATE"
# MSG91_TEMPLATE_ID="your-template-id"

# Payment Gateway (Future - Razorpay)
# RAZORPAY_KEY_ID="rzp_test_xxxxxxxxxxxx"
# RAZORPAY_KEY_SECRET="your-razorpay-secret"

# WhatsApp Business API (Future)
# WHATSAPP_BUSINESS_ACCOUNT_ID="your-account-id"
# WHATSAPP_ACCESS_TOKEN="your-access-token"
# WHATSAPP_PHONE_NUMBER_ID="your-phone-number-id"

# Frontend URL (for redirects, emails, etc.)
FRONTEND_URL="http://localhost:3000"

# Admin Credentials (for seed data)
ADMIN_EMAIL="admin@coachmate.com"
ADMIN_PASSWORD="ChangeThisPassword123!"
ADMIN_FIRST_NAME="Admin"
ADMIN_LAST_NAME="User"
INSTITUTE_NAME="Demo Coaching Center"
